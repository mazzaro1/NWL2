root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true
spaces_around_operators = true
end_of_line = lf
max_line_length = off

[*.py]
indent_style = space
indent_size = 4

[*.md]
indent_size = false
trim_trailing_whitespace = false

[*.java]
indent_style = tab